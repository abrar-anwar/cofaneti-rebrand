<style>
  .sticky_bar_content {
    box-shadow: 0px -4px 10px 0px rgba(213, 213, 213, 0.25);
  }
  .sticky_bar {
    position: fixed;
    bottom: 0;
    width: 100%;
    margin: 0 auto;
    z-index: 9 !important;
    background: #fff;
    text-align: center;
  }
  .sticky_bar p {
    margin: 2px 10px;
    font-size: 14px;
  }
  @media only screen and (max-width: 400px) {
    font-size: 12px;
  }
</style>

<div class="sticky_bar_content">
  <p>{{ section.settings.text }}</p>
</div>

{% schema %}
{
  "name": "Sticky Bar",
  "class": "sticky_bar",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    }
  ],
  "presets": [
    {
      "name": "Sticky Bar"
    }
  ]
}
{% endschema %}
